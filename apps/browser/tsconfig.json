{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "composite": true
  },
  "include": [
    "src/main.ts",
    "src/main/**/*.ts",
    "src/preload.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-renderer",
    "release",
    "src/renderer"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.scripts.json" },
    { "path": "./tsconfig.webview.json" }
  ]
}
